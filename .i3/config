exec /usr/bin/pa-applet &
exec /usr/bin/nm-applet &
# exec --no-startup-id sh ~/.fehbg &
exec dunst
new_window none
new_float normal
# assign [class="Skype"] 5
# assign [class="HipChat"] 5
for_window[class="^.*"] border pixel 0
