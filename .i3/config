for_window[class="HipChat"] move container to workspace 5
for_window[class="Steam"] focus child, layout tabbed, focus

# starting a specially named term automatically 
exec --no-startup-id dolphin -name scratchpad
# move this to scratchpad, if active
for_window [class="Dolphin" instance="scratchpad"] move scratchpad
